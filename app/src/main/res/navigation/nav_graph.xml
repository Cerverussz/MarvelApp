<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/charactersFragment">

    <fragment
        android:id="@+id/charactersFragment"
        android:name="com.devdaniel.marvelapp.ui.characters.CharactersFragment"
        android:label="fragment_characters"
        tools:layout="@layout/fragment_characters">
        <action
            android:id="@+id/action_charactersFragment_to_characterDetailFragment"
            app:destination="@id/characterDetailFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/characterDetailFragment"
        android:name="com.devdaniel.marvelapp.ui.detail.CharacterDetailFragment"
        android:label="characterDetailFragment">

        <argument
            android:name="infoCharacter"
            app:nullable="true"
            app:argType="com.devdaniel.marvelapp.ui.model.InfoCharacter" />
        <action
            android:id="@+id/action_characterDetailFragment_to_infoComicFragment"
            app:destination="@id/infoComicFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />

    </fragment>
    <fragment
        android:id="@+id/infoComicFragment"
        android:name="com.devdaniel.marvelapp.ui.comic.InfoComicFragment"
        android:label="fragment_info_comic"
        tools:layout="@layout/fragment_info_comic">

        <argument
            android:name="infoComics"
            app:nullable="false"
            app:argType="com.devdaniel.marvelapp.domain.model.InfoComics" />

    </fragment>
</navigation>